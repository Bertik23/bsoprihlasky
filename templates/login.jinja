{% extends "header.html" %}

{% block body %}
	<div class = "container">
		<h4>Přihlášení</h4>
		<br>
		{% from "macros.jinja" import render_field %}
		<form method=post action="/login/">
			<dl>
				{{render_field(form.userId)}}
				{{render_field(form.password)}}
			</dl>
			<p><input type=submit value=Login></p>
		</form>
		
		{% if error %}
			<p class="error"><strong>Error:</strong>{{error}}</p>
		{% endif %}

	</div>
{% endblock %}